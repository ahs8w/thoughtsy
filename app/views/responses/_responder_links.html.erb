<div id="responder_links">
  <% if @post.followers.include?(current_user) %>
    <span class="pull-right">
      <%= render 'subscriptions/unsubscribe' %>
    </span>
  <% else %>
    <span class="pull-left">
      <small><%= link_to "offensive or inappropriate?", flag_post_path(@post.id), remote: true %></small>
    </span>
    <span class="pull-right">
      <%= render 'subscriptions/subscribe' %>
    </span>
  <% end %>
</div>