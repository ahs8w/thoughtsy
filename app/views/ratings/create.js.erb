var flash = $('#js_flash_messages');
var rating = $('#rating_form_<%= @response.id %>');

<% if @rating.save %>
  <% if @rating.value == 1 && !post_follower(@response.post) %>
    rating.html("<%= escape_javascript(render('ratings/repost')) %>");
  <% elsif @rating.value >= 3 %>
    rating.html("<%= escape_javascript(render('ratings/message')) %>");
  <% else %>
    rating.html("<%= escape_javascript(render('ratings/rating')) %>");
  <% end %>
<% else %>
  flash.html("<%= escape_javascript(render('shared/flash_messages')) %>");
  flash.fadeOut(5000);
<% end %>