var flash = $('#js_flash_messages');
var rating = $('#rating_form_<%= @rateable.id %>');

<% if @rating.save %>
  $('#notification_response').replaceWith("<%= escape_javascript(render('layouts/notification_response')) %>");
  $('#notification_response').tooltip();
  <% if @rating.value >= 3 %>
    <% if @rating.rateable.instance_of?(Response) %>
      rating.html("<%= escape_javascript(render('ratings/message')) %>");
    <% else %>
      rating.html("<%= escape_javascript(render('ratings/social')) %>");
    <% end %>
  <% else %>
    rating.html("<%= escape_javascript(render('ratings/rating')) %>");
  <% end %>
<% else %>
  flash.html("<%= escape_javascript(render('shared/flash_messages')) %>");
  flash.fadeOut(5000);
<% end %>