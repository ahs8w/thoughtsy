<% provide(:page_title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <% if current_user?(@user) %>
        <%= link_to "Edit settings", edit_user_path(current_user) %>
      <% end %>
    </section>
  </aside>
</div>