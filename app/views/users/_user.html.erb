<li>  
  <%= link_to gravatar_for(user, size: 55), user %>
  <h3>
    <%= link_to user.username, user %>
  </h3>
  <span class="lighter">
    Karma: <%= user.score %>
  </span>
  <span>
    <% if current_user.admin? && !current_user?(user) %>
      | <%= link_to "delete", user, method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  </span>
</li>