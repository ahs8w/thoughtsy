<% provide(:page_title, "Edit profile") %>
<% provide(:page_description, "Change your username, password, gravatar image, and account settings") %>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="well">
      <div class="row" id="edit_user">
        <h1>
          <%= link_to gravatar_for(@user, size: 55), user_path(@user) %>
          Update your profile
        </h1>
        <p class="profile_link"><%= link_to "Return to profile", user_path(@user) %></p>
        <div class="col-md-6 col-md-offset-3">
          <%= form_for(@user) do |f| %>
            <%= render 'fields', f: f %>
            <p class="update_gravatar">
              <%= link_to 'update user image', "http://gravatar.com/emails", target: "_blank" %>
            </p>
            <%= f.submit "Save changes", class: "btn btn-lg btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>