<% provide(:page_title, "Reset Password") %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="well">
      <h4 id="password_reset">Please provide your email address and follow the link to reset your password</h3>
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <%= form_tag password_resets_path do %>
            <div class="field">
              <%= label_tag :email %>
              <%= text_field_tag :email, params[:email], class: "form-control" %>
            </div>
            <div class="actions"><%= submit_tag "Send instructions", class: "btn btn-lg btn-primary" %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>