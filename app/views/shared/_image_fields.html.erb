<div id="image_fields_container">
  <% if params.has_key?(:key) %>
    File: <%= @post.image_name %>
  <% else %>
    <a href="#" data-toggle="modal" data-target="#imageModal">Click to upload a picture</a>
  <% end %>
</div>

<!-- Reply Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="uploadImage"
     aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 class="modal-title center" id="uploadImage">Image Upload</h3>
      </div>
      <div class="modal-body">
        <%= direct_upload_form_for @uploader do |f| %>
          <span id="input_button">
            <button class="btn btn-primary" id="image_button">Choose an image</button>
            <%= f.file_field :image, id: "picture" %>
          </span>
          <%= f.submit 'Upload', class: "btn btn-primary" %>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Displays chosen file name in custom styled button -->
<script>
  $('#picture').change(function(e) {
    var filepath = this.value;
    var m = filepath.match(/([^\/\\]+)$/);
    var filename = m[1];
    $('#image_button').html(' -> ' + filename);
  });
</script>
