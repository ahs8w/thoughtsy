var el = $('#new_post');
var flash = $('#js_flash_messages');

// remove error messages if present
$('#error_explanation').remove();

<% if !@post.save %>

  el.before("<%= escape_javascript(render('shared/error_messages', object: @post)) %>");
  el[0].reset();

<% else %>

  flash.html("<%= escape_javascript(render('shared/flash_messages')) %>");
  flash.fadeOut(5000);
  el[0].reset();
  // $('#post_count').html("<%= pluralize(current_user.posts.count, 'post') %>");

<% end %>