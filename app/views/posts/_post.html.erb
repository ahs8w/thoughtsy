<li id="link_<%= post.id %>">
  <span class="content"><%= wrap(post.content) %></span>
  <span class="timestamp">Posted <%= time_ago_in_words(post.created_at) %> ago</span>
  <% if signed_in? %>
    <% if current_user.admin? %>
    | <%= link_to "delete", post, method: :delete, remote: true, id: "delete_#{post.id}", data: { confirm: "Are you sure?" } %>
    <% end %>
    | <%= link_to "Respond", new_post_response_path(post) %>
  <% end %>
  <% if post.responded_to? %>
    <li id="response">
      <% post.responses.each do |response| %>
        <p>Response: <%= response.content %></p>
      <% end %>
    </li>
  <% end %>
</li>
