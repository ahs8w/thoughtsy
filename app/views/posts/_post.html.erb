<tr>
  <td><%= post.user.username %></td>
  <td><%= post.sort_date %> <%= "(#{post.created_at})" if post.responses.any? %></td>
  <td>
    <%= wrapped(post.content, 50) unless post.content.nil? %>
    <% if current_user.admin? && post.state == 'flagged' %>
      | <%= link_to "delete", post, method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
    <% if post.image? %>
      [image]
    <% end %>
  </td>
  <td><%= post.state %> <%= "(#{post.responses.count})" if post.responses.any? %></td>
</tr>


  