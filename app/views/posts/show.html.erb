<% provide(:page_title, "Responses") %>
<% provide(:page_description, "See all responses to a thought") %>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="well" id="posts_show">
      <div class="thought_wrapper">
        <div class="panel-focus">
          <div class="panel-post" id="show_post">
            <%= render partial: "shared/thought", object: @post %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <ul class="responses">
            <% @responses.each do |response| %>
              <li>
                <div class="thought_wrapper">
                  <div class="panel-focus">
                    <div class="panel-response">
                      <%= render partial: "shared/thought", object: response %>
                      <% if author_or_responder(@post) %>
                        <%= render partial: 'ratings/form', locals: { rateable: response } unless current_user.id == response.user.id %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
